<div class="container-fluid">
<div class="row">
<div class="col-md-7 p-3 p-md-5">
<h3>{{location.title}}</h3>
{% for t in location.info %}<p>{{t.text}}</p>{% endfor %}
<p>
<a href="{{location.map1.url}}" class="btn btn-primary me-3"><i class="{{location.map1.icon}}"></i></a>
<a href="{{location.map2.url}}" class="btn btn-primary me-3"><i class="{{location.map2.icon}}"></i></a>
</p>
</div>
<div class="col-md-5 p-3 p-md-5">
<div class="row">
<div class="col-6 p-1">
<a href="{{location.map1.url}}"><img class="lazy img-fluid" alt="{{location.map1.title}}" data-src="{{location.map1.image}}"/></a>
</div>
<div class="col-6 p-1">
<a href="{{location.map2.url}}"><img class="lazy img-fluid" alt="{{location.map2.title}}" data-src="{{location.map2.image}}"/></a>
</div>
</div>
</div>
</div>
</div>
